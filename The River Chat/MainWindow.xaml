<Window 
        x:Class="The_River_Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_River_Chat"
        mc:Ignorable="d"
        Title="The River" 
        Height="450" 
        Width="800"
        >
    <Grid>

        <TextBox 
            x:Name="chat_box"
            HorizontalAlignment="Left"
            Height="300" Margin="140,70,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="622" RenderTransformOrigin="0.5,0.5"
            >
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.284"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button
            x:Name="connect_btn"
            Style="{StaticResource MaterialDesignRaisedAccentButton}"
            Width="100"
            ToolTip="Resource name: MaterialDesignRaisedAccentButton" Margin="624,10,70,379" Click="connect_btn_Click" Background="#FF00EAEA" BorderBrush="#FF0095EA">
            Connect
        </Button>

        <Button
            x:Name="send_btn"
            Style="{StaticResource MaterialDesignRaisedAccentButton}"
            Width="100"
            ToolTip="Resource name: MaterialDesignRaisedAccentButton" Margin="624,379,70,10" Background="#FF00EAEA" BorderBrush="#FF0095EA" Click="send_btn_Click">
            SEND
        </Button>
        
        <TextBox 
            x:Name="text_tosend"
            HorizontalAlignment="Left"
            Height="23"
            Margin="139,383,0,0"
            TextWrapping="Wrap" 
            Text="TextBox"
            VerticalAlignment="Top"
            Width="480"/>
        
        <Label 
            x:Name="chatname"
            Content="Chat-Name" 
            HorizontalAlignment="Left"
            Margin="370,18,0,0"
            VerticalAlignment="Top"/>
        
        <ListView 
            x:Name="listwleft"
            HorizontalAlignment="Left"
            Height="401"
            Margin="10,10,0,0"
            VerticalAlignment="Top"
            Width="124" SelectionChanged="listwleft_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        

    </Grid>




</Window>
