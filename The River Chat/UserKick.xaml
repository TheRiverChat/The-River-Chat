<UserControl x:Class="The_River_Chat.UserKick"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:The_River_Chat"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="350">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <TextBlock x:Name="nm_lbl" Text="DisplayName" FontSize="15"/>
            <Button x:Name="kick" Content="Kick" Height="20" FontSize="10" Margin="10,0,0,0" Background="Black" Click="kick_Click"/>
            <Button x:Name="ban" Content="Ban ip" Height="20" FontSize="10" Margin="10,0,0,0" Background="Black" Click="ban_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
